<div class="container">
    <div class="col-md-10 offset-md-2 mt-5">
        <div class="card shadow bg-light">
            <div class="container">
                <div class="card-body">
                    <h4 class="card-title mt-2"> Write Article </h4> <hr>
                    <%- include ("./partials/messages") %>
                    <div class="container">
                        <form action="/articles/write" method="POST">
                            <div class="form-group">
                                <label for="author"> Author </label>
                                <input 
                                    type="text" 
                                    placeholder="Enter your Name" 
                                    id="author"
                                    name="author" 
                                    class="form-control"
                                >
                            </div>
                            <div class="form-group">
                                <label for="title"> Title </label>
                                <input 
                                    type="text" 
                                    placeholder="Enter Title of the article" 
                                    id="title"
                                    name="title" 
                                    class="form-control"
                                >
                            </div>
                            <div class="form-group">
                                <label for="article"> Article </label>
                                <input 
                                    type="text" 
                                    id="article"
                                    name="article" 
                                    class="form-control"
                                    style="height: 25vh;"
                                >
                            </div>
                            <input 
                                type="submit" 
                                value="Upload" 
                                class="btn btn-primary mt-3 mb-2"
                            >
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>